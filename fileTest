@RestController
public class TokenController {

    @Autowired
    private TokenService tokenService;

    @GetMapping("/generateToken")
    public String generateToken(@RequestParam String salt) {
        return tokenService.generateToken(salt);
    }
}


@Service
public class TokenService {

    private static final String USERNAME = "utilizator";
    private static final String PASSWORD = "parolă";

    public String generateToken(String salt) {
        String concatenated = USERNAME + PASSWORD + salt;
        String hashed = DigestUtils.sha256Hex(concatenated); // Utilizează SHA-256 pentru hash
        return hashed;
    }
}
