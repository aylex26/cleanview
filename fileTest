    public static Claims decodeToken(String token) {
        try {
            Claims claims = Jwts.parser()
                    .setSigningKey(SECRET_KEY_STR)
                    .parseClaimsJws(token)
                    .getBody();
            return claims;
        } catch (Exception e) {
            System.out.println("Error decoding JWT token:" + e.getMessage());
            return null;
        }
    }
